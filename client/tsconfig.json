{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "rootDir": "src",
    "outDir": "dist",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client", "react", "react-dom"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "vite.config.js",
    "node_modules",
    "dist"
  ]
}
